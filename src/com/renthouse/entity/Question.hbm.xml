<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.renthouse.entity.Question" table="question">
        <id name="questionId" column = "question_id" type="java.lang.Integer">
            <generator class="native" />           <!-- 主键自增长 -->
        </id>
        <!-- 
           <property name="houseId" column = "house_id" type="java.lang.Integer">
        </property>
        <property name="userId" column = "user_id" type="java.lang.Integer">
        </property>
         -->
     
        <property name="questionContent" column = "question_content" type="java.lang.String">
        </property>
        <property name="questionTime" column = "question_time" type="java.sql.Date">
        </property>
        <!-- 
          <set name="setReply" cascade="save-update,delete">
			<key column="fk_reply_question"/>
			<one-to-many class="com.renthouse.entity.reply"/>
		</set>
         -->
      
        <many-to-one name="aUser" class="com.renthouse.entity.User" column="fk_question_user"/>
         <many-to-one name="aHouse" class="com.renthouse.entity.House" column="fk_question_house"/>
    </class>
</hibernate-mapping>