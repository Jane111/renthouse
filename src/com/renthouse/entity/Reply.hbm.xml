<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.renthouse.entity.Reply" table="reply">
        <id name="replyId" column = "reply_id" type="java.lang.Integer">
            <generator class="native" />           <!-- 主键自增长 -->
        </id>
        <!-- 
          <property name="questionId" column = "question_id" type="java.lang.Integer">
        </property>
        <property name="userId" column = "user_id" type="java.lang.Integer">
        </property>
         -->
      
        <property name="replyContent" column = "reply_content" type="java.lang.String">
        </property>
        <property name="replyTime" column = "reply_time" type="java.sql.Date">
        </property>
        <many-to-one name="aUser" class="com.renthouse.entity.User" column="fk_reply_user"/>
        <many-to-one name="aQuestion" class="com.renthouse.entity.Question" column="fk_reply_question"/>
    </class>
</hibernate-mapping>